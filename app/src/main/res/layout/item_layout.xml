<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Person"
        android:layout_row="8"
        android:layout_column="0" />

    <TextView
        android:text="Adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Adresse"
        android:layout_row="7"
        android:layout_column="0" />

    <TextView
        android:text="Ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Ort"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
        android:text="Kosten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Kosten"
        android:layout_weight="1"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:text="Datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Datum"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:text="----"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puffer"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:text="Art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Art"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:text="Kostenart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Kostenart"
        android:layout_row="4"
        android:layout_column="0" />
    <TextView
        android:text="----"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puffer2"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:text="Beschreibung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_Beschreibung"
        android:layout_weight="1"
        android:layout_row="0"
        android:layout_column="1" />
</GridLayout>
